
<% include ./partials/header.ejs %> 
  <% if (!isAuthenticated) {%>
    <a class="log" href="/auth/twitter"><button class="btn btn-primary">Sign in with Twitter</button></a>
  <% } else { %>
  <div class="center">
    <a class="log" href="/logout"><button class="btn btn-primary">Logout</button></a>
    <h4 class="user">Welcome</h4>
    <h1 class="title">Your pic</h1>
    <% if ( foundPhoto !== undefined) { %>
    <form method="post" action="/users/<%= user.id %>">
      <input type="text" name="status"></input></br>
      <input type="hidden" name="photo" value="<%= foundPhoto %>">
      <input type="hidden" name="photoID" value="<%= photoId %>">
      <button id="tweet" class="btn btn-primary">Tweet it!</button>
    </form>
      <img class="foundphoto" src="<%= foundPhoto %>"></img>
    <% } else {%>
      <h1>Oops! Did not return any results.</h1>
