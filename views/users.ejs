<% include ./partials/header.ejs %> 

    <h2 class="title">All Users</h2>
    <form action="/find/users">

      <p>
        <label for="user"> </label> <input type="text" name="username" id="user" class="tweetstatus findpic searchname" placeholder="search for users">
      </p>
      <p>
        <button class ="btn btn-info searchbutton">Go forth and socialize</button>
      </p>
    </form>
    <div class="userrows">
    <ul>

      <% users.forEach(function(user) { %>
        <span class="clearfix col-sm-3"><li><a href="/users/<%= user.id %>"> <strong><%= user.username %></strong></a></li></span>
      <% }) %>

        <% for (i = 0; i < 50; i++) { %>
          <a href="#"><span class="clearfix col-sm-3"><strong>username<%= i %></strong></span></a>
        <% } %>

    </ul>
  </div>
</div>
